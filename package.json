{
	"name": "webext-patterns",
	"version": "1.0.0",
	"description": "Tool to convert the patterns of your WebExtension manifest to regex",
	"keywords": [
		"browser",
		"chrome",
		"extension",
		"firefox",
		"glob",
		"permission",
		"match",
		"webext"
	],
	"repository": "fregante/webext-patterns",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc && ava && xo",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/better-regex": "off",
			"unicorn/no-array-callback-reference": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			]
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/chrome": "0.0.128",
		"ava": "^3.15.0",
		"sinon": "^9.2.4",
		"type-fest": "^0.20.2",
		"typescript": "^4.1.3",
		"xo": "^0.37.1"
	}
}
